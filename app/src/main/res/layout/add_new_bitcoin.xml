<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/add_coin_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/add_coin_scroll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/slide_to_add_new_coin"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/add_coin_parent"
        app:layout_constraintRight_toRightOf="@+id/add_coin_parent"
        app:layout_constraintTop_toBottomOf="@+id/add_coin_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_coins"
        app:layout_constraintTop_toBottomOf="@+id/add_coin_scroll"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>